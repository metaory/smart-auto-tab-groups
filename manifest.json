{
	"manifest_version": 3,
	"name": "Smart Auto Tab Group",
	"version": "1.0.0",
	"description": "Groups tabs by domain or subdomain; new tabs auto-join. Sort Aâ€“Z, ignore pinned, collapse inactive, dedupe by URL.",
	"permissions": ["tabs", "tabGroups", "storage", "management"],
	"icons": {
		"16": "icons/icon-16.png",
		"32": "icons/icon-32.png",
		"48": "icons/icon-48.png",
		"128": "icons/icon-128.png"
	},
	"action": {
		"default_icon": {
			"16": "icons/icon-16.png",
			"32": "icons/icon-32.png"
		},
		"default_popup": "index.html"
	},
	"background": { "service_worker": "sw.js" },
	"commands": {
		"group-now": {
			"suggested_key": {
				"default": "Ctrl+Shift+G",
				"mac": "Command+Shift+G",
				"linux": "Ctrl+Shift+G",
				"windows": "Ctrl+Shift+G"
			},
			"description": "Group now"
		},
		"ungroup-all": {
			"suggested_key": {
				"default": "Ctrl+Shift+U",
				"mac": "Command+Shift+U",
				"linux": "Ctrl+Shift+U",
				"windows": "Ctrl+Shift+U"
			},
			"description": "Ungroup all"
		}
	}
}
